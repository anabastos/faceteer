{
    "env": {
      "es6": true,
      "node": true,
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8
    },
    "rules": {
      "indent": [
          "error",
          2,
          {
            "ignoreComments": true,
            "SwitchCase": 1
          }
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "eqeqeq": [
          "error",
          "always"
      ],
      "space-infix-ops": [
          "error",
          {"int32Hint": false}
      ],
      "max-len": [
          "error",
          {
            "code": 80,
            "ignoreComments": true
          }
      ],
      "prefer-const": "error",
      "no-const-assign": "error",
      "no-var": "error",
      "no-new-object": "error",
      "no-array-constructor": "error",
      "prefer-arrow-callback": "error",
      "brace-style": "error"
    }
  }
  